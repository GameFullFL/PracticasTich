@model Entidades.Alumnos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form class="form-horizontal">
        <h4>Alumnos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.primerApellido, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.EditorFor(model => model.primerApellido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.primerApellido, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.segundoApellido, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.EditorFor(model => model.segundoApellido, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.segundoApellido, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.correo, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.telefono, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.fechaNacimiento, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.EditorFor(model => model.fechaNacimiento, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.fechaNacimiento, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.curp, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.EditorFor(model => model.curp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.curp, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.sueldo, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.EditorFor(model => model.sueldo, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                @Html.ValidationMessageFor(model => model.sueldo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.idEstadoOrigen, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.DropDownList("idEstadoOrigen", new SelectList(ViewBag.listEstados, "id", "nombre"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idEstadoOrigen, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-group row" style="text-align:right">
            @Html.LabelFor(model => model.idEstatus, htmlAttributes: new { @class = "control-label col-sm-2", @style = "padding-top:5px" })
            <div class="col-sm-10" style="text-align:left">
                @Html.DropDownList("idEstatus", new SelectList(ViewBag.listEstatus, "id", "nombre"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idEstatus, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-2" style="text-align:right">
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
            <div class="col-auto">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-primary" })
            </div>

        </div>
    </form>

}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
